---
import StandardLayout from '$layouts/StandardLayout.astro';
import SocialEmbed from '$components/SocialEmbed.astro';

import AugHipLogoType from '$svg/aughip-logo.astro';
import Heart from '$svg/heart.astro';

// Socials
