import { LATEST_INSTALLER, GITHUB_RELEASES, DISCORD_INVITE, GITHUB_REPO, GITHUB_API_AUG_DRIVER, GITHUB_API_AUG_INSTALLER } from '$/constants.js';

const driverGithubApiRequest = await fetch(GITHUB_API_AUG_DRIVER);
const driverVersion = (await driverGithubApiRequest.json()).name;
const installerGithubApiRequest = await fetch(GITHUB_API_AUG_DRIVER);
const installerVersion = (await installerGithubApiRequest.json()).name;
